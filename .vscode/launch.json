    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug current lua file",
            "type": "lua",
            "request": "launch",
            "program": "${file}",
            "stopOnEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug LOVE",
            "type": "lua-local",
            "request": "launch",
            "program":
            {
                "command": "love"
            },
            "args":
            [
                ".",
                "vsc_debug"
            ],
            "scriptFiles": [
                "./main.lua"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
    ]
}
